CREATE TABLE
    SVC_SEQGENERATOR
    (
        NMAXVALUE INTEGER NOT NULL,
        SNAMESEQ VARCHAR2(255) NOT NULL,
        CONSTRAINT PK_SVC_SEQGENERATOR_NAMESEQ PRIMARY KEY (SNAMESEQ)
    );

CREATE TABLE
    A_USERGROUP
    (
        IDDI NUMBER NOT NULL,
        IDPARENT NUMBER,
        SCAPTIONGROUP VARCHAR2(255),
        SDESCRIPTIONGROUP VARCHAR2(4000),
        SCODEGROUP VARCHAR2(255) NOT NULL,
        BACTIVE CHAR(1) DEFAULT '1' NOT NULL,
        PRIMARY KEY (IDDI),
        CONSTRAINT A_USERGROUP_PARENT FOREIGN KEY (IDPARENT) REFERENCES "A_USERGROUP" ("IDDI"),
        CONSTRAINT A_USERGROUP_IX1 UNIQUE (SCODEGROUP)
    );

CREATE TABLE
    A_USER
    (
        SSECONDNAME VARCHAR2(255),
        IDDI NUMBER NOT NULL,
        SLASTNAME VARCHAR2(255) NOT NULL,
        SFIRSTNAME VARCHAR2(255),
        SCAPTION VARCHAR2(255) NOT NULL,
        SLOGIN VARCHAR2(255) NOT NULL,
        SPASSWORD VARCHAR2(255) NOT NULL,
        IDGROUP NUMBER,
        BACTIVE CHAR(1) DEFAULT '1' NOT NULL,
        CONSTRAINT PK_A_USER_DI PRIMARY KEY (IDDI),
        CONSTRAINT A_USER_GROUP FOREIGN KEY (IDGROUP) REFERENCES "A_USERGROUP" ("IDDI"),
        CONSTRAINT UQ_A_USER_LOGIN UNIQUE (SLOGIN)
    );
