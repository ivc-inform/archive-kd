<?xml version="1.1" encoding="UTF-8"?>
<objectSchema xmlns="http://simpleSys.ru/xml/library/bo" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://simpleSys.ru/xml/library/bo http://toucan.simplesys.lan/xml/xsd/v1.0.0-1/schema.xsd">
	<group prefix="ARX" name="arx" caption="Электоронный архив технической документации">
		<classes>
			<classSimple name="гser" autoTableMapping="true" caption="Пользователи">
				<attrs>
					<attr name="usname" type="sCaption" caption="Наименование" mandatory="false"/>
					<attr name="uscode" caption="Код" type="sCaption" mandatory="false"/>
					<attr name="usrdescr" caption="Описание" type="sCaption" mandatory="false"/>
					<attr name="id" type="id" mandatory="true" hidden="true" caption="PK" genBySeq="true"/>
					<attr name="tdatein" caption="Дата записи" type="dTimestamp" mandatory="false"/>
					<attr name="password" type="sPasswordPlain" caption="Пароль" mandatory="false"/>
					<attr name="plogin" type="sCode" caption="Пароль" mandatory="false"/>
					<attr name="bmain" type="bBoolean" caption="Активный" mandatory="false"/>
					<attr name="idprofile" type="nInt" caption="Код профиля" mandatory="false"/>
				</attrs>
				<defaults>
					<showAttrs>
						<attrName>uscode</attrName>
					</showAttrs>
          <uiSettings uiFormType="singleListGrid"/>
				</defaults>
				<constraints>
					<uc uniqueType="pk">
						<attrName>ID</attrName>
					</uc>
				</constraints>
			</classSimple>
		</classes>
	</group>
</objectSchema>
