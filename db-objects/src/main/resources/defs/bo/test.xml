<?xml version="1.1" encoding="UTF-8"?>
<objectSchema xmlns="http://simpleSys.ru/xml/library/bo" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://simpleSys.ru/xml/library/bo http://toucan.simplesys.lan/xml/xsd/v1.0.0-1/schema.xsd">
    <group prefix="TEST" name="test" caption="Загрузка / выгрузка файлов">
        <classes>
            <classSimple name="upload_files" autoTableMapping="true" caption="Учет последовательных идентификаторов (ID)">
                <attrs>
                    <attr name="id" type="id" mandatory="true" caption="Идентификатор"/>
                    <attr name="file_name" type="sCaption" mandatory="true" caption="Наименование файла"/>
                    <attr name="file_content" type="blob" mandatory="false" caption="Содержимое файла файла"/>
                </attrs>
                <defaults>
                    <uiSettings uiFormType="singleListGrid"/>
                </defaults>
                <constraints>
                    <uc uniqueType="pk">
                        <attrName>id</attrName>
                    </uc>
                </constraints>
            </classSimple>
        </classes>
    </group>
</objectSchema>
