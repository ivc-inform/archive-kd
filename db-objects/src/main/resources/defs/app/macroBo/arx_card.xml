<?xml version="1.1" encoding="UTF-8"?>
<RootPane xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://simpleSys.ru/xml/library/app"
          xmlns:isc="http://simpleSys.ru/xml/library/ISC"
          xsi:schemaLocation="http://simpleSys.ru/xml/library/app http://toucan.simplesys.lan/xml/xsd/v1.0.0-1/schemaApp.xsd">
    <Bo BoName="card"
        GroupName="arx"
        BoCaption="Карточка учета"
        GroupCaption="Электоронный архив технической документации"
        Enabled="true"/>
    <MenuPath>
        <isc:GroupTitle>Электоронный архив технической документации</isc:GroupTitle>
        <isc:Identifier>arx</isc:Identifier>
        <isc:Title>Электоронный архив технической документации</isc:Title>
        <isc:MenuPath>
            <isc:Identifier>arx_card</isc:Identifier>
            <isc:Title>Карточка учета</isc:Title>
        </isc:MenuPath>
    </MenuPath>
    <RootCanvas>
        <ListGridEditor>
            <useSelfName>false</useSelfName>
            <AutoFetchData>true</AutoFetchData>
            <AutoSaveEdits>false</AutoSaveEdits>
            <AutoFitWidthApproach>both</AutoFitWidthApproach>
            <AutoFitFieldWidths>true</AutoFitFieldWidths>
            <Identifier>editorarx_card</Identifier>
            <DataPageSize>simpleSyS.config.dataPageSize</DataPageSize>
            <DrawAheadRatio>simpleSyS.config.drawAheadRatio</DrawAheadRatio>
            <InitialSort>
                <SortSpecifier>
                    <Property>id</Property>
                </SortSpecifier>
            </InitialSort>
            <CanEdit>true</CanEdit>
            <CanSelectCells>false</CanSelectCells>
            <FetchDelay>500</FetchDelay>
            <RecordComponentPoolingMode>Recycle</RecordComponentPoolingMode>
            <SelectionType>Multiple</SelectionType>
            <ShowAdvancedFilter>false</ShowAdvancedFilter>
            <ShowFilterEditor>true</ShowFilterEditor>
            <ShowRecordComponents>true</ShowRecordComponents>
            <ShowRecordComponentsByCell>true</ShowRecordComponentsByCell>
            <TextMatchStyle>txtMchStyleSubstring</TextMatchStyle>
            <WrapCells>true</WrapCells>
        </ListGridEditor>
    </RootCanvas>
</RootPane>
